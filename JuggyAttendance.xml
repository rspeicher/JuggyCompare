<Ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.blizzard.com/wow/ui/" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\..\FrameXML\UI.xsd">
  <Frame name="JAttFrame" parent="UIParent" movable="true" enableMouse="true" inherits="DialogBoxFrame">
    <Size>
      <AbsDimension x="300" y="600"/>
    </Size>
    <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
      <BackgroundInsets>
        <AbsInset left="5" right="5" top="5" bottom="5"/>
      </BackgroundInsets>
      <TileSize>
        <AbsValue val="16"/>
      </TileSize>
      <EdgeSize>
        <AbsValue val="16"/>
      </EdgeSize>
    </Backdrop>
    <Frames>
      <ScrollFrame name="$parentScroll" inherits="UIPanelScrollFrameTemplate" toplevel="true">
        <Anchors>
          <Anchor point="TOP">
            <Offset>
              <AbsDimension x="-10" y="-30"/>
            </Offset>
          </Anchor>
        </Anchors>
        <Size>
          <AbsDimension x="255" y="530"/>
        </Size>
        <ScrollChild>
          <EditBox name="$parentText" letters="2000" multiLine="true" autoFocus="true" enableMouse="true">
            <Size>
              <AbsDimension x="250" y="544"/>
            </Size>
            <Scripts>
              <OnTextChanged>
						</OnTextChanged>
              <OnEscapePressed>
							JAttFrame:Hide()
						</OnEscapePressed>
            </Scripts>
            <FontString inherits="ChatFontNormal"/>
          </EditBox>
        </ScrollChild>
      </ScrollFrame>
    </Frames>
  </Frame>
</Ui>
